pipeline {
	agent any

	stages {
		stage("build") {
			when {
				changeset "**/result/**"
			}
			steps {
				echo "compiling result app"
				dir("result") {
					sh "npm install"
				}
			}
		}
		stage("test") {
			when {
				changeset "**/result/**"
			}
			steps {
				echo "running unit tests on result app"
				dir("result") {
					sh "npm test"
				}
			}
		}
	}
}
